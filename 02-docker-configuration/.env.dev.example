# Development Environment Configuration
# Copy this file to .env.dev and modify as needed

# Environment
NODE_ENV=development
DEPLOY_ENV=dev

# Server Configuration
SERVER_IP=127.0.0.1
HTTP_PORT=8080
HTTPS_PORT=8443

# Database Configuration (Development)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=prs_development
POSTGRES_USER=prs_dev_user
POSTGRES_PASSWORD=dev_password_123

# Redis Configuration (Development)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=dev_redis_123

# JWT Configuration (Development - Use weak keys for dev)
JWT_SECRET=dev_jwt_secret_key_not_for_production
JWT_EXPIRES_IN=24h

# Email Configuration (Development - Use test email service)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@dev.example.com

# File Upload Configuration (Development)
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx

# API Configuration (Development)
API_RATE_LIMIT=1000
API_TIMEOUT=30000

# Logging Configuration (Development)
LOG_LEVEL=debug
LOG_MAX_SIZE=50m

# Resource Limits (Development - Lower limits)
BACKEND_MEMORY_LIMIT=1g
FRONTEND_MEMORY_LIMIT=512m
WORKER_MEMORY_LIMIT=512m
POSTGRES_MEMORY_LIMIT=1g
REDIS_MEMORY_LIMIT=512m
GRAFANA_MEMORY_LIMIT=256m
PROMETHEUS_MEMORY_LIMIT=512m

# Development Tools Ports
ADMINER_PORT=8081
PORTAINER_PORT=9001
GRAFANA_PORT=3002
PROMETHEUS_PORT=9091

# Development Features
ENABLE_DEBUG=true
ENABLE_HOT_RELOAD=true
ENABLE_SWAGGER=true
ENABLE_PROFILING=true

# Frontend Build Configuration (Development)
VITE_APP_API_URL=http://localhost:8080/api
VITE_APP_UPLOAD_URL=http://localhost:8080/upload
VITE_APP_ENVIRONMENT=development
VITE_APP_ENABLE_DEVTOOLS=true

# Docker Configuration
DOCKER_SOCK_PATH=/var/run/docker.sock
