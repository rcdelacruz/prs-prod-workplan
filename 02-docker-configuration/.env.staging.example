# Staging Environment Configuration
# Copy this file to .env.staging and modify as needed

# Environment
NODE_ENV=staging
DEPLOY_ENV=staging

# Server Configuration
SERVER_IP=192.168.1.100
HTTP_PORT=80
HTTPS_PORT=443

# Database Configuration (Staging)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=prs_staging
POSTGRES_USER=prs_staging_user
POSTGRES_PASSWORD=staging_secure_password_456

# Redis Configuration (Staging)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=staging_redis_secure_456

# JWT Configuration (Staging - Use strong keys)
JWT_SECRET=staging_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=8h

# Email Configuration (Staging)
SMTP_HOST=smtp.staging.example.com
SMTP_PORT=587
SMTP_USER=staging@example.com
SMTP_PASSWORD=staging_email_password
SMTP_FROM=noreply@staging.example.com

# File Upload Configuration (Staging)
UPLOAD_MAX_SIZE=52428800
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# API Configuration (Staging)
API_RATE_LIMIT=500
API_TIMEOUT=15000

# Logging Configuration (Staging)
LOG_LEVEL=info
LOG_MAX_SIZE=100m

# Resource Limits (Staging - Medium limits)
BACKEND_MEMORY_LIMIT=2g
FRONTEND_MEMORY_LIMIT=1g
WORKER_MEMORY_LIMIT=1g
POSTGRES_MEMORY_LIMIT=2g
REDIS_MEMORY_LIMIT=1g
GRAFANA_MEMORY_LIMIT=512m
PROMETHEUS_MEMORY_LIMIT=1g

# Service Ports (Staging)
ADMINER_PORT=8080
PORTAINER_PORT=9000
GRAFANA_PORT=3001
PROMETHEUS_PORT=9090

# Staging Features
ENABLE_DEBUG=false
ENABLE_HOT_RELOAD=false
ENABLE_SWAGGER=true
ENABLE_PROFILING=false

# Security Configuration (Staging)
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true
CORS_ORIGIN=https://staging.example.com

# Frontend Build Configuration (Staging)
VITE_APP_API_URL=https://staging.example.com/api
VITE_APP_UPLOAD_URL=https://staging.example.com/upload
VITE_APP_ENVIRONMENT=staging
VITE_APP_ENABLE_DEVTOOLS=false

# Docker Configuration
DOCKER_SOCK_PATH=/var/run/docker.sock

# Backup Configuration (Staging)
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *
