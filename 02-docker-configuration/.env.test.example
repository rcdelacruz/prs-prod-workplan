# Test Environment Configuration
# Copy this file to .env.test and modify as needed

# Environment
NODE_ENV=test
DEPLOY_ENV=test

# Server Configuration (Test)
SERVER_IP=127.0.0.1
HTTP_PORT=8082
HTTPS_PORT=8444

# Database Configuration (Test - In-memory or separate test DB)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=prs_test
POSTGRES_USER=prs_test_user
POSTGRES_PASSWORD=test_password_789

# Redis Configuration (Test)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=test_redis_789

# JWT Configuration (Test - Short expiry for testing)
JWT_SECRET=test_jwt_secret_key_for_testing_only
JWT_EXPIRES_IN=1h

# Email Configuration (Test - Mock email service)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=test@example.com

# File Upload Configuration (Test - Smaller limits)
UPLOAD_MAX_SIZE=1048576
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf

# API Configuration (Test - Higher limits for testing)
API_RATE_LIMIT=10000
API_TIMEOUT=5000

# Logging Configuration (Test)
LOG_LEVEL=debug
LOG_MAX_SIZE=10m

# Resource Limits (Test - Minimal limits)
BACKEND_MEMORY_LIMIT=512m
FRONTEND_MEMORY_LIMIT=256m
WORKER_MEMORY_LIMIT=256m
POSTGRES_MEMORY_LIMIT=512m
REDIS_MEMORY_LIMIT=256m

# Test Features
ENABLE_DEBUG=true
ENABLE_HOT_RELOAD=false
ENABLE_SWAGGER=false
ENABLE_PROFILING=true
ENABLE_TEST_ROUTES=true

# Test Database Configuration
TEST_DB_RESET=true
TEST_DB_SEED=true

# Docker Configuration
DOCKER_SOCK_PATH=/var/run/docker.sock

# Frontend Build Configuration (Test)
VITE_APP_API_URL=http://localhost:8082/api
VITE_APP_UPLOAD_URL=http://localhost:8082/upload
VITE_APP_ENVIRONMENT=test
VITE_APP_ENABLE_DEVTOOLS=true

# Test-specific settings
PARALLEL_TESTS=true
TEST_TIMEOUT=30000
COVERAGE_THRESHOLD=80
